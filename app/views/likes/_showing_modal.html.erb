
<p type="button" class="text-muted" data-toggle="modal" data-target="#showModal"><%= @apartment.likes.count == 0 ? "" : "Vaata #{@apartment.likes.count} kasutajat, kes otsivad korterikaaslasi selle kuulutuse jaoks"  %> </p>


    <!-- Modal when logged in-->
<div class="modal fade" id="showModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title" id="exampleModalLabel"><%= current_user ? "Kasutajad, kes on märkinud, et otsivad kuulutuse jaoks korterikaaslasi" : "Kasutajad, kes on märkinud, et otsivad kuulutuse jaoks korterikaaslasi" %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <ul class="list-group">
                    <% @apartment.likes.each do |l| %>
                        <%= link_to user_path(l.user) do %>
                            <li class="list-group-item mt-0">
                            <h6 class="text-muted"><%= l.user.name %></h6>
                            <p><%= l.comment %></p>
                            </li>
                        <% end %>
                    <% end %>
                </ul>
            </div>
            
        
        </div>
    </div>
</div>