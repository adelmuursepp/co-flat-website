
<div class="container-fluid px-5 mt-5 ">
  <div class="col-md-10 mx-auto"> 
    <%# <h2 class="mx-auto text-center my-5"><%= t '.title' %></h2> 
    <div class="row">
      <div class="col-md-3">
        <ul class="sidebar-list">
          <li class="sidebar-item"><%= link_to "Edit Profile", edit_user_registration_path, class: "sidebar-link active" %></li>
          <li class="sidebar-item"><%= link_to "#{t('.delete_account')}", registration_path(resource_name), data: { confirm: "#{t('.sure_to_delete')}" }, class: "sidebar-link active", method: :delete %></li>
