        <%= link_to "View My Profile", user_path(current_user.id), class: "btn btn-primary" %>
      </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="container">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.input :name, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.input :phone, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.label :description %>
                <%= f.text_area :description, rows: 5, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.input :email, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="form-row">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p><%= t '.please_confirm_email'%> <%= resource.unconfirmed_email %></p>
              <% end %>
            </div>
            <div class="form-row">
            <div class="form-group col-12">
              <%= f.input :password,
                          placeholders: "#{t('.leave_blank_password')}",
                          required: false,
                          label: "#{t('.new_password')}",
                          input_html: { autocomplete: "new-password" } %>
              </div>
            </div>
            <div class="form-row">
            <div class="form-group col-12">
              <%= f.input :password_confirmation,
                          required: false,
                          label: "#{t('.confirm_new_password')}",
                          input_html: { autocomplete: "new-password" } %>
              </div>
            </div>
            <div class="form-row">
            <div class="form-group col-12">
              <%= f.input :current_password,
                          hint: "#{t('.current_password_for_change')}",
                          label: "#{t('.current_password')}",
                          required: true,
                          input_html: { autocomplete: "current-password" } %>
              </div>
            </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "#{t('.action')}", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

